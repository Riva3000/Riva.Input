<Application x:Class="GenericControllersTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:rCmnCtrls="clr-namespace:RCommon.Controls;assembly=RCommon"
             
             xmlns:local="clr-namespace:GenericControllersTest"
             
             Startup="AppStartup">
    <Application.Resources>

        <SolidColorBrush x:Key="PitchGray" Color="#FF363636"/>
        <SolidColorBrush x:Key="GreenGray" Color="#FF3A4622"/>

        <Thickness x:Key="indent1Margin">20,6,0,0</Thickness>
        <Thickness x:Key="indent2Margin">40,0,0,0</Thickness>

        <rCmnCtrls:RBoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style TargetType="{x:Type Border}" x:Key="ButtonIndicator">
            <!--BorderThickness="1" BorderBrush="White" MinWidth="24" MinHeight="24" HorizontalAlignment="Center" VerticalAlignment="Center"-->
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="MinWidth" Value="24" />
            <Setter Property="MinHeight" Value="24" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Application.Resources>
</Application>
